<h1 class="page_tite">Say Hello</h1>


  <div>
    <%= form_for @contact do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true %>

      <br>

      <%= f.label :email %><br>
      <%= f.email_field :email, required: true %>

      <br>

      <%= f.label :message %><br>
      <%= f.text_area :message, as: :text %>

      <div class="hidden">
        <%= f.label :nickname %><br>
        <%= f.text_field :name, hint: 'leave this field blank' %>
      </div>

      <br>

      <%= f.submit 'Send Message' %>
    <% end %>
  </div>